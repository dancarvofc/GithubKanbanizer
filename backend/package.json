{
  "name": "github-kanbanizer-backend",
  "version": "1.0.0",
  "description": "API for organizing GitHub repositories into a Kanban view",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist node_modules pnpm-lock.yaml"
  },
  "keywords": [
    "github",
    "kanban",
    "fastify",
    "typescript",
    "zod"
  ],
  "author": "Dan",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "node-cache": "^5.1.2",
    "octokit": "^5.0.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/node-cache": "^4.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}